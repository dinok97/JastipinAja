<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="70dp"
    tools:context=".PostOptionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_choice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="20sp"
            android:text="@string/choice"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_post_jastip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:drawableStart="@drawable/ic_arrow_upward_grey_24dp"
            android:drawablePadding="16sp"
            android:text="@string/post_jastip"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_choice"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_request_jastip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:drawableStart="@drawable/ic_arrow_downward_grey_24dp"
            android:drawablePadding="16dp"
            android:text="@string/request_jastip"
            android:fontFamily="@font/roboto_regular"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_post_jastip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>